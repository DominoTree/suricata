# Sample /etc/logrotate.d/suricata configuration file.
/home/nprice/suricata/var/log/suricata/*.log /home/nprice/suricata/var/log/suricata/*.json {
        daily
        missingok
        rotate 5
        compress
        delaycompress
        minsize 500k
	sharedscripts
	postrotate
	    /bin/kill -HUP `cat /home/nprice/suricata/var/run/suricata.pid 2> /dev/null` 2> /dev/null || true
	endscript
}
